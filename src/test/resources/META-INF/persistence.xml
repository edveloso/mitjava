<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
   	<persistence-unit name="mitjava">
   		<provider>org.hibernate.ejb.HibernatePersistence</provider>
   		<class>br.edu.infnet.mitjava.modelo.Aluno</class>
   		<class>br.edu.infnet.mitjava.modelo.Turma</class>
   		
   		<properties>
   		   <property name="javax.persistence.jdbc.url" 
   		   		value="jdbc:mysql://localhost:3306/mitjava"/>
   		   
   		   <property name="javax.persistence.jdbc.user" 
   		   		value="root"/>
   		   		
   		   <property name="javax.persistence.jdbc.password" 
   		   		value="123456"/>
   		   		
   		   <property name="javax.persistence.jdbc.dialect" 
   		   		value="org.hibernate.dialect.MySQL5Dialect"/>			
   		   
   		   <property name="hibernate.hbm2ddl.auto" 
   		   		value="create"/>
   		   
   		   <property name="hibernate.format_sql" 
   		   		value="true"/>
   		   		
   		   <property name="hibernate.show_sql" 
   		   		value="true"/>		
   		   		
   		</properties>
   	
   	
   	</persistence-unit>
</persistence>